<div class="row height100 rounded shadow justify-content-center bgwt p-5">
  <div class="col">
    <div class="row">
      <div class="col-3">
        <div class="row">
          <div class="col">
            <img
              src="<%- usuario.foto %>"
              class="img-fluid img-cards rounded"
              style="height: fit-content; width: 100%"
              alt="..."
            />
          </div>
        </div>
      </div>
      <div class="col-9">
        <div class="row">
          <div class="col-6">
            <h1 class="slab roxo"><%- usuario.nome %></h1>
            <br>
            <h5 class="laranja">Mora em <%- usuario.cidade %></h5>
            <h5 class="laranja">E-mail: <%- usuario.email %></h5>
            <h5 class="laranja">Telefone: (11) 9999-9999</h5>
            <br>
            <h3 class="slab roxo"> Animais cadastrados: <%- animais.length %></h3>
        </div>
      </div>
    </div>
    <%- include('animaisUser', {animais}) %>
  </div>
</div>
