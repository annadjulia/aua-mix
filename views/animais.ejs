<div class="row row-cols-1 row-cols-md-5 g-4">
  <% animais.forEach(animal => { %> 
  <div class="col">
    <div class="card h-100">
      <img src="<%- animal.url %>" class="card-img-top img-fluid img-cards" alt="<%- animal.legenda %>">
      <div class="card-body">
        <h5 class="card-title"><%- animal.nome %></h5>
        <p class="card-text"><%- animal.idade %> <% if(animal.idade==1){ %> ano <% }else{ %> anos <% } %>  | <%- animal.detalhes %></p>
        <a href="/animais/<%- animal.id %>" class="btn btn-primary lara">Ver mais</a>
      </div>
    </div>
  </div>
  <% }); %> 
</div>