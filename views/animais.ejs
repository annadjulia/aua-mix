<div class="row rounded shadow justify-content-center bgwt p-2 mb-3 mx-1 text-center">
  <h1 class="slab">Animais para adoção</h1>
</div>
<div class="row">
  <div class="col-3">
    <div class="row rounded shadow bgwt">
      <div class="col">
        <div class="row">

        </div>
        <div class="row"></div>
        <div class="row"></div>
      </div>
    </div>
  </div>
  <div class="col-9">
    <div class="row row-cols-1 row-cols-md-4 g-3">
      <% animais.forEach(animal=> { %>
        <div class="col rounded animalcard">
          <div class="card h-100">
            <img src="<%- animal.url %>" class="card-img-top img-fluid img-cards" alt="<%- animal.legenda %>" />
            <div
              class="card-body rounded-bottom <% if(animal.sexo=='F'){ %> fundoroxo <% }else{ %> fundolaranja <% } %>">
              <h5 class="card-title fofo slab"><%- animal.nome %></h5>
              <p class="card-text fofo mb-1">
                <%- animal.idade %>
                  <% if(animal.idade==1){ %> ano <% }else{ %> anos
                      <% } %> | <% if(animal.sexo=='F' ){ %> Fêmea <% }else{ %> Macho <% } %>
              </p>
              <a href="/animais/<%- animal.id %>"
                class="slab btn btn-light <% if(animal.sexo=='F'){ %> roxo <% }else{ %> laranja <% } %>">Ver mais</a>
            </div>
          </div>
        </div>
        <% }); %>
    </div>
  </div>
</div>