<div
  class="row rounded shadow justify-content-center bgwt p-2 mb-3 text-center"
>
  <h1 class="slab roxo">Seu perfil</h1>
</div>
<div class="row rounded shadow justify-content-center bgwt p-5">
  <div class="col">
    <div class="row">
      <div class="col-lg-4">
        <div class="row mb-3">
          <div class="col">
            <img
              src="<%- locals.layoutVariables.usuario.foto %>"
              class="img-fluid img-cards rounded"
              style="height: fit-content; width: 100%"
              alt="...">
          </div>
        </div>
      </div>
      <div class="col-lg-8">
        <div class="row">
          <div class="col-lg-6">
            <h1 class="slab roxo"><%- locals.layoutVariables.usuario.nome %> <a href="/editarPerfil"><i class="bi bi-pencil-square roxo"></i></a></h1>
            <% if(locals.layoutVariables.usuario.ong == true){ %>
              <span class="badge d-flex align-items-center p-1 fundoroxo pe-2 border border-dark-subtle rounded-pill" style="width: fit-content;">
                <img class="rounded-circle me-1" width="24" height="24" src="/media/iconbranco.png" alt="">ONG
              </span>
            <% } %>
            <br>
            <h5 class="laranja">Entrou em <%- locals.layoutVariables.usuario.dataIngresso %></h5>
            <h5 class="laranja">Mora em <%- locals.layoutVariables.usuario.cidade %></h5>
            <h5 class="laranja">E-mail: <%- locals.layoutVariables.usuario.email %></h5>
            <% if(locals.layoutVariables.usuario.telefone){ %>
            <h5 class="laranja">Telefone: <%- locals.layoutVariables.usuario.telefone %> </h5>
            <% } else { %>
            <h5 class="laranja">Telefone: Não informado </h5>
            <% } %>
            <br>
            <h3 class="slab roxo"> Animais cadastrados: <%- animais.length %></h3>
        </div>
        
      </div>    
    </div>
    <%- include('animaisUser', {animais, page: "perfil"}) %>
  </div>

  <h2 class="slab roxo mt-4">Configurações</h2>
  <a href="/logout" class="btn btn-primary lara mt-3">Deslogar</a>
</div>
